@model MvcSinemaOdev.ViewModel.FilmViewModel
@{
    ViewBag.Title = "Index";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />


<div class="col-md-1">
    <a class="btn btn-success " data-toggle="modal" data-target=".bootstrapmodal">Film Ekle</a>
</div>
<div class="col-md-6">
    <div id="user-content">
        @Html.Action("FilmList", "Film")
    </div>
    <div class="col-md-6">
        <div class="modal fade bootstrapmodal" role="dialog">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">
                    <div class="modal-title">
                        <button type="button" class="btn btn-group-justified btn-primary ">İşlemler</button>
                    </div>
                    <div class="modal-body">
                       @using (Ajax.BeginForm("Create", "Film", FormMethod.Post, new AjaxOptions { OnSuccess = "Create" }, new { id = "frm-create" }))
                       {
                        @Html.HiddenFor(m => m.FilmIDNumber)

                        <div>
                            Film  Ad:

                            @Html.TextBoxFor(m => m.FilmAdName, new { @class = "form-control" })
                        </div>
                        <div>
                            3 boyutlumu
                            @Html.CheckBoxFor(m => m.FilmUcBoyutlumuCheck)

                        </div>
                        <div>
                            yerli mi
                            @Html.CheckBoxFor(m => m.FilmYerlimiCheck)

                        </div>
                        <div>
                            Film Süre
                            @Html.TextBoxFor(m => m.FilmSureTime, new { @class = "form-control" })


                        </div>
                        <div>
                            Film Türü Seç
                            @Html.DropDownList("FilmTurIDNumber", ViewBag.FilmTurIDNumber as SelectList, "----Film Tür Seçiniz-----", new { @class = "form-control" })

                        </div>
                        <div>
                            <input type="submit" value="Kaydet" class="btn success" />
                        </div>
                       }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-5">
</div>
<script type="text/javascript">
    function Create(result) {   //ekleme sonucunda tekrardann listeleme yap
        if (result == "1") {
            window.location.href = "@Url.Action("Index","Film")";


        }
    }
</script>




















