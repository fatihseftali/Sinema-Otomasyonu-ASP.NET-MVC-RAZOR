@model MvcSinemaOdev.ViewModel.FilmTurViewModel
@{
    ViewBag.Title = "Index";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />


<div class="col-md-1">
    <a class="btn btn-success " data-toggle="modal" data-target=".bootstrapmodal">Film Tür Ekle</a>
</div>
<div class="col-md-6">
    <div id="user-content">
        @Html.Action("FilmTurList", "FilmTur")
    </div>
    <div class="col-md-6">
        <div class="modal fade bootstrapmodal" role="dialog">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">
                    <div class="modal-title">
                        <button type="button" class="btn btn-group-justified btn-primary ">İşlemler</button>
                    </div>
                    <div class="modal-body">
                        @using (Ajax.BeginForm("Create", "FilmTur", FormMethod.Post, new AjaxOptions { OnSuccess = "Create" }, new { id = "frm-create" }))
                        {
                            @Html.HiddenFor(m => m.FilmTurNumber)

                            <div>
                                Tür Adı

                                @Html.TextBoxFor(m => m.FilmTurName,new {@class="form-control" })
                            </div>
                            <div>
                                <input type="submit" value="Kaydet" class="btn success" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-5">
</div>
<script type="text/javascript">
    function Create(result) {   //ekleme sonucunda tekrardann listeleme yap
        if (result == "1") {
            window.location.href = "@Url.Action("Index","FilmTur")";


        }
    }
</script>






















